#!/bin/bash
#
# +-------------------------------------------------------------------+
# | Simple script to display information on every upower managed      |
# | battery.                                                          |
# |                                                                   |
# | Any arguments are handed directly to each upower -i command.      |
# +-------------------------------------------------------------------+
#

printpowerinfo()
{
	path=$(cat -)
	echo "Info for battery: $path"
	upower -i $path $*
}

upower -e | grep "battery_" | printpowerinfo $*
